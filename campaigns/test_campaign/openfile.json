{   "comment":"example",
    "output":{
        "name": "{dune_mc.gen_fcl_filename}__{dune.campaign}__{dune.config_file}__{core.application.name}__{core.application.version}",
        "namespace": "usertests",
        "dir": "/pnfs/dune/scratch/users/${USER}/merge_test/rootcheck",
        "metadata": {
            "core.data_tier": "logfile",
            "core.application.name": "rootcheck",
            "core.application.version": "$DUNESW_VERSION",
            "core.file_format": "txt"
        },
        "grandparents": false,
        "lifetime": 10
    },

    "metadata":{
        "required":[ "~core.runs"]},
    "merging":{
        "method":{
            "name": "lar",
            "cmd": "python -m rootcheck -l {inputs} > rootcheck.log",    
            "outputs": [
                {
                    "name": "{NAME}__rootcheck__{UUID}.root",
                    "rename": "rootcheck.log",
                    "metadata": {
                        "core.data_tier": "logfile",
                        "core.application.name": "rootcheck",
                        "core.file_format": "txt",
                        "dune.campaign": "test_campaign"
                    },
                    "method": "hadd"
                }
            ],
            "target_mode": "count",
            "target_size": 20
        }
    }
}
  
